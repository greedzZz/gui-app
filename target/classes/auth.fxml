<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #d2ffd7;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controllers.AuthController">
    <children>
        <Label fx:id="titleLabel" layoutX="181.0" layoutY="90.0" text="Авторизация">
            <font>
                <Font name="Segoe UI Black" size="35.0"/>
            </font>
        </Label>
        <TextField fx:id="loginField" alignment="CENTER" layoutX="200.0" layoutY="169.0" prefHeight="30.0"
                   prefWidth="200.0" promptText="Логин">
            <font>
                <Font name="Segoe UI" size="16.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="200.0" layoutY="226.0" prefHeight="30.0"
                       prefWidth="200.0" promptText="Пароль">
            <font>
                <Font name="Segoe UI" size="16.0"/>
            </font>
        </PasswordField>
        <Button fx:id="okButton" onAction="#ok" layoutX="255.0" layoutY="281.0" mnemonicParsing="false"
                prefHeight="36.0" prefWidth="90.0"
                style="-fx-border-color: #c0c0c0; -fx-background-radius: 10; -fx-border-radius: 10;" text="ОК">
            <font>
                <Font name="Segoe UI" size="18.0"/>
            </font>
        </Button>
        <CheckBox fx:id="signUpButton" layoutX="211.0" layoutY="338.0" mnemonicParsing="false"
                  text="Зарегистрироваться">
            <font>
                <Font name="Segoe UI" size="16.0"/>
            </font>
        </CheckBox>
        <ComboBox fx:id="languageComboBox" layoutX="463.0" layoutY="14.0" prefHeight="27.0" prefWidth="123.0"
                  style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #c0c0c0;"/>
        <Label fx:id="languageLabel" layoutX="419.0" layoutY="18.0" text="Язык:">
            <font>
                <Font name="Segoe UI" size="16.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
